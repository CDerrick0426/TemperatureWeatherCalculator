
public class decide {
	int temp;
	int weather;
	{
		if (temp <= 32) {
			if (weather == 1) {
				snowing();
			} else if (weather == 2) {
				coldCloudy();
			} else if (weather == 3) {
				coldWind();
			} else {
				coldClear();
			}
		}
		
		else if ((temp > 32) && (temp <= 50)) {
			if (weather == 1) {
				coldRain();
			} else if (weather == 2) {
				chillyCloudy();
			} else if (weather == 3) {
				chillyWind();
			} else {
				chillyClear();
			}
		} 
		
		else if ((temp > 50) && (temp <= 75)) {
			if (weather == 1) {
				warmRain();
			} else if (weather == 2) {
				warmCloudy();
			} else if (weather == 3) {
				warmWind();
			} else {
				warmClear();
			}
		}

		else if ((temp > 75)) {
			if (weather == 1) {
				hotRain();
			} else if (weather == 2) {
				hotCloudy();
			} else if (weather == 3) {
				hotWind();
			} else {
				hotClear();
			}
		}
	}
	
public class clothes {
	int top; 
	int bottoms;
	int shoes;
	
	switch (top) {
	case 1:{
		System.out.println("heavy coat");
		break;
	case 2:
		top = 2;
		System.out.println("light jacket");
		break;
	case 3 :
		System.out.println("long sleeve shirt");
		break;
	default:
		System.out.println("t shirt");
		break;
		}
	}
	switch (bottoms) {
	case 1:{
		System.out.println("pants");
		break;
	case 2:
		System.out.println("pants");
		break;
	case 3 :
		System.out.println("light pants");
		break;
	default:
		System.out.println("shorts");
		break;
		}
	}
	switch (shoes) {
	case 1:{
		System.out.println("boots");
		break;
	case 2:
		System.out.println("tennis shoes");
		break;
	case 3 :
		System.out.println("tennis shoes");
		break;
	default:
		System.out.println("flip flops");
		break;
		}
	}
}
	private  void snowing() {
		top = 1;
		bottom = 1;
		shoes = 1;
	}

	private void hotClear() {
		top = 2;
		bottom = 1;
		shoes = 1;
	}

